{
	"name": "toadua",
	"version": "1.0.0",
	"description": "A collaborative dictionary for the Toaq language.",
	"main": "core/server.js",
	"type": "module",
	"engines": {
		"node": ">=16.0.0"
	},
	"dependencies": {
